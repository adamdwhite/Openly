    <%= form.label :age %>
    <%= form.number_field :age, id: :client_age %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select(:client_gender, ['Undisclosed','Male','Female','Other'], {}, { :class => 'select' })%>
  </div>

  <div class="field">
    <%= form.label :zipcode %>
    <%= form.number_field :zipcode, id: :client_zipcode %>
  </div>

  <div class="field">
    <%= form.label :alias %>
    <%= form.text_field :alias, id: :client_alias %>
  </div>

